@model IEnumerable<CodingExercise.BAL.Models.PersonalDataModel>
@using GridMvc.Html
@{
    Layout = null;
}


@Styles.Render("~/Content/css")

<html>
<head>
   @Styles.Render("~/Content/css")  
</head>
<body>
    <div class="container" style="background:lavender; margin-top:40px">
        <div class="row" style="padding-left:20px; background:darkorange; margin-top:-16px">
        <h2 class="pull-left">Users</h2>
            <a  style="margin-left:20px" href="@Url.Action("Index","Registration")">
                <span class="glyphicon-user"/> New User
            </a>
        </div>
        <div class="row" style="overflow:auto;">
            @Html.Grid(Model).Columns(columns =>
{
    columns.Add(c => c.FullName).Titled("FullName").Filterable(true);
    columns.Add(c => c.NickName).Titled("NickName").Filterable(true);
    columns.Add(c => c.HomeAddress).Titled("HomeAddress").Filterable(true);
    columns.Add(c => c.HomePhone).Titled("HomePhone").Filterable(true);
    columns.Add(c => c.Mobile).Titled("Mobile").Filterable(true);
    columns.Add(c => c.HomeFax).Titled("HomeFax").Filterable(true);
    columns.Add(c => c.HomeEmailAddress).Titled("HomeEmailAddress").Filterable(true);
    columns.Add(c => c.DateOfBirth).Titled("DateOfBirth").Filterable(true);
    columns.Add(c => c.SSN).Titled("SSN").Filterable(true);
    columns.Add(c => c.PassportNumber).Titled("PassportNumber").Filterable(true);
    columns.Add(c => c.DriverLicenseNumber).Titled("DriverLicenseNumber").Filterable(true);
    columns.Add(c => c.CreateOn).Titled("CreateOn").Filterable(true);
   
    columns.Add()
    .Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(o => Html.ActionLink("Delete", "Delete", new { id = o.Id }));
}).WithPaging(10).Sortable(true)
        </div>
    </div>
</body>
</html>
